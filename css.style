*{
  margin: 0;
  padding: 0;
}
body {
  font-family: sans-serif;
  background-color: green

}
/* Container for flexboxes */
.row {
  display: -webkit-flex;
  display: flex;
}

/* Create three equal columns that sits next to each other */
.column {
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  padding: 10px;
  height: 300px; /* Should be removed. Only for demonstration */
}

.footer {
  background-color: #f1f1f1;
  padding: 10px;
  text-align: center;
}
